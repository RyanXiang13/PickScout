# ─── Supabase ───────────────────────────────────────────────
# Project Settings → Database → Connection string → Session pooler
DATABASE_URL=postgresql://postgres.YOURREF:YOURPASSWORD@aws-1-us-east-2.pooler.supabase.com:5432/postgres

# Project Settings → API
SUPABASE_URL=https://YOURREF.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ─── Frontend (Next.js) ─────────────────────────────────────
# These are exposed to the browser — use anon key only
NEXT_PUBLIC_SUPABASE_URL=https://YOURREF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-public-key-here

# URL of the FastAPI backend (local dev or Render)
NEXT_PUBLIC_API_URL=http://localhost:8000
